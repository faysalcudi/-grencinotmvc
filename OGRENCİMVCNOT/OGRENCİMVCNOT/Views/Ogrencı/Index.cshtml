@using OGRENCİMVCNOT.Models.EntityFramework
@model List<TBLOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>OGRENCİ ID</th>
        <th>OGRENCİ ADI</th>
        <th>OGRENCİ SOYADI</th>
        <th>OGRENCİ CİNSİYET</th>
        <th>OGRENCİ KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>

    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OGRENCIID</td>
                <td>@ogr.OGRAD</td>
                <td>@ogr.OGSOYAD</td>
                <td>@ogr.OGRCINSIYET</td>
                <td>@ogr.TBLKULUPLER.KULUPAD</td>

                <td>
                    <a href="/Ogrencı/Sil/@ogr.OGRENCIID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrencı/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">Güncelle</a>
                </td>

            </tr>
        }
    </tbody>

</table>

<a href="/Ogrencı/YeniOgrenci" class="btn btn-primary">Yeni Ögrenci Kayıt</a>
